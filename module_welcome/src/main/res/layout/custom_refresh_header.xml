<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_10dp">

    <ImageView
        android:id="@+id/img_bg_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_header_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:rotation="100" />

    <ImageView
        android:id="@+id/img_person_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/icon_header_use"
        app:layout_constraintBottom_toBottomOf="@id/img_bg_view"
        app:layout_constraintLeft_toLeftOf="@id/img_bg_view"
        app:layout_constraintRight_toRightOf="@id/img_bg_view"
        app:layout_constraintTop_toTopOf="@id/img_bg_view" />

    <TextView
        android:id="@+id/text_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_bg_view" />

</android.support.constraint.ConstraintLayout>
