<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--android:background="@drawable/rect_white_corner_all_6dp"-->

    <LinearLayout
        android:id="@+id/fake_search_main_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_12dp"
        android:layout_marginTop="@dimen/margin_12dp"
        android:layout_marginBottom="@dimen/margin_12dp"
        android:background="@drawable/shape_search_result2_et_bg"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/fake_search_notice"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/search_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="搜材料、区角、教案"
            android:maxLines="1"
            android:padding="@dimen/padding_10dp"
            android:singleLine="true"
            android:textColor="#999"
            android:textColorHint="#999"
            android:textSize="13sp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/fake_search_notice"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_nor_12dp"
        android:layout_marginRight="@dimen/margin_12dp"
        android:background="?selectableItemBackgroundBorderless"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:src="@drawable/notice"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/fake_search_main_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/spot"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/shape_spot_white"
        app:layout_constraintCircle="@+id/fake_search_notice"
        app:layout_constraintCircleAngle="45"
        app:layout_constraintCircleRadius="@dimen/dimen_nor_15dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
